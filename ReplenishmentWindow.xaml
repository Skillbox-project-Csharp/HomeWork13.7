<Window x:Class="HomeWork13._7.ReplenishmentAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork13._7"
        mc:Ignorable="d"
        Title="ReplenishmentAccount" Height="250" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TopInfoText"></TextBlock>
            <TextBox x:Name="InputAmountMoney"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{DynamicResource ButtonDefult}" IsDefault="True" Click="Accept_Click">ОК</Button>
                <Button Style="{DynamicResource ButtonDefult}" IsCancel="True">Отмена</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
