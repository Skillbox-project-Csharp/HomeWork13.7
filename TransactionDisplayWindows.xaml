<Window x:Class="HomeWork13._7.TransactionDisplayWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork13._7"
        mc:Ignorable="d"
        Title="TransactionDisplayWindows" Height="400" Width="350">
    <Grid>
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Name="TexBlockTransactionInfo"/>
                    <Border Padding="5,5,5,5" Background="Azure" BorderBrush="Black" BorderThickness="1">
                        <TextBlock  Name="TexBlockStatusTransaction"/>
                    </Border>
                </StackPanel>
            </Border>
    </Grid>
</Window>
